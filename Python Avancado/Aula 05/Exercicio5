def juntar_lista(lista_de_listas):
    lista_aplanada = [elemento for lista_interna in lista_de_listas for elemento in lista_interna]
    return lista_aplanada

lista_de_listas = [[1, 2, 3], [4, 5], [6, 7, 8]]
lista_aplanada = juntar_lista(lista_de_listas)

print("Lista de listas original:", lista_de_listas)
print("Lista aplanada:", lista_aplanada)
